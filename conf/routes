# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Negocios
GET     /shops                   controllers.Application.getShops

#Get nuevo negocio
GET 	/newshop				controllers.Application.newShop

#Agregar negocio
POST	/shops				controllers.Application.addShop

# Precios
GET     /found-prices                   controllers.Application.getFoundPrices

#Get nuevo negocio
GET 	/newfoundprice			controllers.Application.newFoundPrice

#Agregar negocio
POST	/found-prices				controllers.Application.addFoundPrice



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
